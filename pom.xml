        <module>portmon/book</module>
        <module>rmi-client/book</module>
        <!-- TODO: <module>rmi-server/book</module>-->
        <module>server/book</module>
        <!-- TODO: <module>wrapper/book</module>-->
      </modules>
    </profile>
  </profiles>
</project>
